@using ExpectationMeter.DataServices;
@model List<User>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<table class="table table-striped">
    <thead>

        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Gender</td>
            <td>Date of Birth</td>
            <td>Mobile No.</td>
            <td>Delete</td>
           
        </tr>
      </thead>
    <tbody>
        @foreach(var user in Model)
        {
            string gender = user.Gender == "M" ? "Male" : "Female";
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Gender</td>
            <td>@user.DOB</td>
            <td>@user.MobileNo</td>
            <td>
                <a href="/Home/UpdateUser?userID=@user.UserID" target="_blank" class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>


                <a id="@user.UserID" onclick="DeleteUser('@user.UserID');" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>

            </td>

        </tr>
        }


</table>
<script type="text/javascript">
   
    function DeleteUser(userID) {
            var jqhx = $.ajax({
                type: "GET",
                url: "/Home/DeleteUser?userID=" + userID
            }).done(function (data) {
                alert(data);
                $("#" + userID).parent().parent()
                    .css("background", "red")
                    .css("color", "white")
                    .fadeout('veryslow', function () {
                        $(this).delay(1).remove();
                    });

                });
 }

    
</script>
